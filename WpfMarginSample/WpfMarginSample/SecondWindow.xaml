<Window x:Class="WpfMarginSample.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMarginSample"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Text="垂直对齐" TextAlignment="Center" FontSize="18" VerticalAlignment="Center"></TextBlock>
        <Button Grid.Row="1" VerticalAlignment="Top">Button1顶部对齐</Button>
        <Button Grid.Row="2" VerticalAlignment="Center">Button2居中对齐</Button>
        <Button Grid.Row="3" VerticalAlignment="Bottom">Button3底部对齐</Button>
        <Button Grid.Row="4 " Margin="5, 5,5,5">Button4拉伸平铺</Button>

    </Grid>
</Window>
