<Window x:Class="WpfControlStackPanelSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlStackPanelSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Border Background="SkyBlue" BorderBrush="Black" BorderThickness="2">
            <TextBlock FontSize="12" Foreground="Black">Hello</TextBlock>
        </Border>

        <Border Background="CornflowerBlue" BorderBrush="Black" BorderThickness="2" Width="400" Height="100">
            <TextBlock FontSize="14" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center">Hello</TextBlock>
        </Border>

        <Border Background="DeepSkyBlue" BorderBrush="Black" BorderThickness="2">
            <TextBlock FontSize="16" Foreground="Black">Hello</TextBlock>
        </Border>
    </StackPanel>
</Window>
