<Window x:Class="WpfControlCheckBoxSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlCheckBoxSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <CheckBox x:Name="CheckBox" Content="已选中" IsChecked="True"/>
            <CheckBox x:Name="CheckBox2" Content="未选定" IsChecked="False"/>
            <CheckBox x:Name="CheckBox3" Content="不确定" IsChecked="{x:Null}"/>
        </StackPanel>
    </Grid>
</Window>
