<Window x:Class="WpfControlExpanderSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlExpanderSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Expander 
            Header="Expander" 
            Width="200" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Background="BlueViolet" 
            ExpandDirection="Left">

            <ListBox SelectionMode="Multiple" Background="BlanchedAlmond">
                <ListBoxItem IsSelected="True">Item 1</ListBoxItem>
                <ListBoxItem IsSelected="True">Item 2</ListBoxItem>
                <ListBoxItem>Item 3</ListBoxItem>
                <ListBoxItem>Item 4</ListBoxItem>
            </ListBox>
        </Expander>
    </Grid>
</Window>
